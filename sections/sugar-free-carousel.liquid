<style>

  @keyframes slideleft {
    from {
      transform: translateX(0%);
    }

    to {
      transform: translateX(-100%);
    }
  }

  #sugar_free_carousel {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 5vh;
    margin: 0 auto -2% auto;
    white-space: nowrap;
    background-color: #faf8fb;
  }
  
  @media screen and (min-width: 600px) {
      #sugar_free_carousel {
      overflow: hidden;
      position: relative;
      width: 100%;
      height: 5vh;
      margin: -3% 0;
      white-space: nowrap;
      background-color: #faf8fb;
    }
  }

  .sugar_free_slides {
    display: flex;
    position: absolute;
    height: 100%;
    animation: slideleft 500s linear infinite;
  }

  .sugar_free_slide img {
    margin: 0 30px;
    height: 100%;
    object-fit: cover;
  }
</style>



