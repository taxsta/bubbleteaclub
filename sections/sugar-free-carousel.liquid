<!-- The javascript to duplicate imgs in .sugar_free_carousel to make the carousel scroll infinitely -->
<script>
     for (var i = 0; i < 10; i++) {
        var templateSlide = document.querySelector('.sugar_free_slides .sugar_free_slide');
        var slidesContainer = document.querySelector('.sugar_free_slides');
        
        let clonedSlide = templateSlide.cloneNode(true);
        
        slidesContainer.appendChild(clonedSlide);
    }
</script>

