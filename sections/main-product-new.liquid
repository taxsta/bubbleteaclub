        padding-bottom: {{ section.settings.padding_bottom }}px;
        }
        }
        *{
        scroll-behavior: smooth;
        }

        #toppings-popup {
          position: relative;
          margin: 2rem 0 0 0;
          border-top: 0.1rem solid rgba(var(--color-foreground),.08);
          border-bottom: 0.1rem solid rgba(var(--color-foreground),.08);
          display: flex;
          flex: 1;
          align-items: center;
        }

        .popup_btn {
        z-index: 2;
        text-decoration: none;
        text-align: left;
        font-family: Assistant, sans-serif;
        font-style: normal;
        font-size: calc(1.0 * 1.5rem);
        }

        .popup_btn:hover {
        font-weight: bold;
        text-align: left;
        }

        .popup_btn_a {
        padding: 1.5rem 0;
